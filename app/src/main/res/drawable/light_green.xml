<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/light_green" />
            <stroke
                android:color="@color/light_green" />
<corners android:radius="10dp"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/light_green"
                android:endColor="@color/light_green"
                android:angle="270" />
            <stroke
                android:color="@color/light_green" />
            <corners android:radius="10dp"/>
            <corners
                />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>